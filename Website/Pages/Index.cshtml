@page
@model IndexModel
@using DinoDiner.Data;
@using DinoDiner.Data.Entrees;
@using DinoDiner.Data.Drinks;
@using DinoDiner.Data.Sides;
@{
    ViewData["Title"] = "Home page";
}

<form id="website">
    <div id="search">
        <input type="text" name="SearchTerms" value="@Model.SearchTerms" />
        <input type="submit" value="Search">
    </div>

    <div id="filters">
        @foreach (String type in Menu.Types)
        {
                <label>
                    <input type="checkbox" name="Type" value="@type" checked="@Model.Type.Contains(type)" />
                @type
                </label>
        }


        <h4>Calories</h4>
        <div>
            Between
            <input name="CaloriesMin" type="number" min="0" max="1000" step="1" placeholder="min" />
            and
            <input name="CaloriesMax" type="number" min="0" max="1000" step="1" placeholder="max" />
        </div>

        <h4>Price</h4>
        <div>
            Between
            <input name="PriceMin" type="number" min="0" max="1000" step="0.5" placeholder="min" />
            and
            <input name="PriceMax" type="number" min="0" max="1000" step="0.5" placeholder="max" />
        </div>

    </div>

    <div id="results">
        <u1 class="text-center">
            <h1 class="display-4">Dino Diner</h1>
            <p>Satisfing dino-sized appetites!</p>
            <h2 id="entrees">Entrees</h2>
            <ul>
                @foreach (IMenuItem item in @Model.Items.OfType<Entree>())
                {
                        <li class="menu-item">
                            <div class="item-name">@item.Name</div>
                            <div class="item-type">@item.Type</div>
                            <div class="item-description">@item.Description</div>
                            <div class="item-price">Price: $@item.Price</div>
                            <div class="item-calories">Calories: @item.Calories</div>
                        </li>
                }
            </ul>
            <h2 id="sides">Sides</h2>
            <ul>
                @foreach (IMenuItem item in @Model.Items.OfType<Side>())
                {
                        <li class="menu-item">
                            <div class="item-name">@item.Name</div>
                            <div class="item-type">@item.Type</div>
                            <div class="item-description">@item.Description</div>
                            <div class="item-price">Price: $@item.Price</div>
                            <div class="item-calories">Calories: @item.Calories</div>
                        </li>
                }
            </ul>
            <h2 id="drinks">Drinks</h2>
            <ul>
                @foreach (IMenuItem item in @Model.Items.OfType<Drink>())
                {
                        <li class="menu-item">
                            <div class="item-name">@item.Name</div>
                            <div class="item-type">@item.Type</div>
                            <div class="item-description">@item.Description</div>
                            <div class="item-price">Price: $@item.Price</div>
                            <div class="item-calories">Calories: @item.Calories</div>
                        </li>
                }
            </ul>
        </u1>
    </div>
</form>
